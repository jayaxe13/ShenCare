<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shencare.shencaremobile.About_Us">

    <android.support.v7.widget.Toolbar
        android:id="@+id/aboutUs_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/shen"
        app:title="About Us"
        app:titleTextColor="@color/toolbarTitleColor"/>

    <LinearLayout
        android:id="@+id/aboutUs_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/aboutUs_toolbar"
        android:orientation="vertical" >
        <ScrollView android:id="@+id/aboutUs_scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <WebView
                android:id="@+id/aboutUs_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="50px"
                />

        </ScrollView>
    </LinearLayout>

</RelativeLayout>
