<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.shencare.shencaremobile.Service_Fragment.ServiceDetails_Profile">

    <RelativeLayout
        android:id="@+id/sd_vol_education_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <TextView
        android:id="@+id/serviceDetail_Education"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Education:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

        <TextView
            android:id="@+id/serviceDetail_edu_info"
            android:layout_marginLeft="10dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/serviceDetail_Education"
            android:text="2ewqkljer'qwlerkjqwer'lkqwjercqwlerkjqwer'qwlekzkjrpqwjek"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sd_vol_gender_field"
        android:layout_marginTop="10dp"
        android:layout_below="@id/sd_vol_education_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/serviceDetail_Gender"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Gender:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:id="@+id/serviceDetail_gen_info"
            android:layout_marginLeft="10dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/serviceDetail_Gender"
            android:text="Female"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sd_vol_workdays_field"
        android:layout_marginTop="10dp"
        android:layout_below="@id/sd_vol_gender_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/serviceDetail_Workdays"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Work Days:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:id="@+id/serviceDetail_wd_info"
            android:layout_marginLeft="10dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/serviceDetail_Workdays"
            android:text="Saturday, Sunday"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sd_vol_email_field"
        android:layout_marginTop="10dp"
        android:layout_below="@id/sd_vol_workdays_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/serviceDetail_Email"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Email:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:id="@+id/serviceDetail_email_info"
            android:layout_marginLeft="10dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/serviceDetail_Email"
            android:text="blabla@gmail.com"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </RelativeLayout>

</RelativeLayout>
